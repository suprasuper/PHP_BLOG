{% extends "layouts/base.html.twig" %}

{% block title %}Modifier le commentaire{% endblock %}

{% block content %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Modifier le commentaire</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <form method="post" action="{{ base_path }}/article/{{ articleId }}/comment/{{ comment.id }}/edit">
                <div class="mb-3">
                    <label for="contenu" class="form-label">Contenu</label>
                    <textarea id="contenu" name="contenu" class="form-control" rows="5" required>{{ comment.contenu }}</textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ base_path }}/article/{{ articleId }}" class="btn btn-outline-secondary">‚Üê Retour</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
