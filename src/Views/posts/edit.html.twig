{% extends "layouts/base.html.twig" %}

{% block title %}Modifier l'article{% endblock %}

{% block content %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Modifier l'article</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            <form method="post" action="{{ base_path }}/article/{{ article.id }}/update">
                <div class="mb-3">
                    <label for="titre" class="form-label">Titre</label>
                    <input type="text" class="form-control" id="titre" name="titre" value="{{ article.titre }}" required>
                </div>
                <div class="mb-3">
                    <label for="contenu" class="form-label">Contenu</label>
                    <textarea class="form-control" id="contenu" name="contenu" rows="6" required>{{ article.contenu }}</textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
