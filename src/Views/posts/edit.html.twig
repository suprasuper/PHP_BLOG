{% extends "layouts/base.html.twig" %}

{% block title %}Modifier l'article{% endblock %}

{% block content %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Modifier l'article</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <form method="post" action="{{ base_path }}/article/{{ article.id }}/update">
                <div class="mb-3">
                    <label for="titre" class="form-label">Titre</label>
                    <input type="text" id="titre" name="titre" class="form-control" value="{{ article.titre }}" required>
                </div>

                <div class="mb-3">
                    <label for="chapo" class="form-label">Chapo</label>
                    <input type="text" id="chapo" name="chapo" class="form-control" value="{{ article.chapo }}" required>
                </div>

                <div class="mb-3">
                    <label for="contenu" class="form-label">Contenu</label>
                    <textarea id="contenu" name="contenu" class="form-control" rows="10" required>{{ article.contenu }}</textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ base_path }}/article/{{ article.id }}" class="btn btn-outline-secondary">‚Üê Retour</a>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
